{
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true
        }
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
        "prettier"
    ],
    "rules": {
        "strict": 0,
        "quotes": ["error", "double", { "allowTemplateLiterals": true }],
        "semi": ["error", "always"],
        "valid-typeof": "off",
        "handle-callback-err": "off",
        "standard/no-callback-literal": "off"
    },
    "globals": {
        "sinon": true,
        "it": true,
        "xit": true,
        "expect": true,
        "describe": true,
        "xdescribe": true,
        "request": true,
        "beforeEach": true,
        "before": true,
        "afterEach": true,
        "after": true
    }
}
